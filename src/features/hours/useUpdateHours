import { useMutation, useQueryClient } from "@tanstack/react-query";
import { updateHours as updateHoursApi } from "../../services/apiHours";
import { useNavigate } from "react-router-dom";
import toast from "react-hot-toast";

export function useUpdateHours() {
  const queryClient = useQueryClient();
  const navigate = useNavigate();
  const { mutate: updateHours, isLoading: isUpdating } = useMutation({
    mutationFn: updateHoursApi,
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ["hours"] });
      navigate("/hours", { replace: true });
      toast.success("Stunden erfolgreich angepasst.");
    },
    onError: (err) => {
      toast.error("Fehlgeschlagen.");
    },
  });

  return { updateHours, isUpdating };
}
